{
  "name": "rednote-take-home",
  "version": "0.1.0",
  "description": "API providing user registration and contact management",
  "author": "Eric Van Egmond <ericve25@gmail.com>",
  "engines": {
    "node": ">=9.7.1",
    "npm": ">=5.6.0"
  },
  "dependencies": {
    "express": "^4.15.4",
    "body-parser": "^1.18.2"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^5.0.1",
    "eslint": "^4.18.1",
    "mocha": "^5.0.1",
    "nyc": "^11.4.1"
  },
  "scripts": {
    "start": "node ./src/server.js",
    "dev": "node -r dotenv/config ./src/server.js",
    "dev-debug": "npm run dev -- --inspect=5858 --debug-brk",
    "lint": "eslint --color --ext .js .",
    "lint-fix": "npm run lint -- --fix",
    "test": "nyc mocha 'src/**/*test.js'",
    "test-debug": "npm run test -- --inspect=5858 --debug-brk",
    "clean": "git clean -xdf",
    "prebuild": "rm -rf ./build && mkdir -p ./build && cp -R package.json package-lock.json src build",
    "build": "cd build && npm install --production",
    "postbuild": "rm -f ./build/src/*test.js ./build/src/**/*test.js ./build/src/**/**/*test.js"
  },
  "nyc": {
    "check-coverage": true,
    "statements": 90,
    "branches": 90,
    "functions": 90,
    "lines": 90,
    "all": true,
    "include": [
      "src/**/*.js",
      "src/*.js"
    ],
    "exclude": [
      "src/statsd.js",
      "**/*test.js",
      "src/config/index.js",
      "src/server.js",
      "src/messages/utils.js",
      "src/**/tests/*.js"
    ],
    "reporter": [
      "html",
      "text",
      "lcov"
    ]
  }
}
